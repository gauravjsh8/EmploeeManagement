@{
}
<style>

.button{
    background-color:green;
    color:white;
    border-color:green;
    margin-bottom:20px;
    margin-top:20px;
    margin-left:45%;
}
thead{
    background-color:blue;
    color:white;
    font-weight:bold
}
table{
    border-color:blue;
    text-align:center;
}
#head{
    text-align:center;
    font-weight:bold;
}
</style>
<h1 id="head">Attendance Tracker</h1>
<button onclick="CheckIn()" class="button">@ViewBag.CheckInCheck</button>
<input id="attendanceId" value=@ViewBag.AttendanceId hidden="hidden" />

<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Check In Time</th>
            <th>Check Out Time</th>
        </tr>
        </thead>
        <tbody>
         @if (ViewBag.EmployeeShiftLogs !=null)
        {
            foreach(var item in ViewBag.EmployeeShiftLogs)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td>@item.CheckInTime</td>
                    <td>@item.CheckOutTime</td>
                </tr>
            }
        }

         
        
    </tbody>
</table>
<script>
    function CheckIn()
    {
        var attendanceId=document.getElementById("attendanceId").value;
        window.location.href ="@Url.Action("CheckInEmployee","Attendance")"+"?attendanceId="+attendanceId;
    }
</script>
