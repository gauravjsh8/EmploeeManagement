@model List<EmployManagement.Models.EmployeeShift>


<table class="table">
    
    <thead>
        
        <tr>
            
            <th>CheckIn Time</th>
            <th>CheckOut Time</th>
            <th>Total Duration</th>
             <th>Employee</th>

        </tr>
    </thead>
    <tbody>

        @foreach (EmployManagement.Models.EmployeeShift item in Model)
        {
            <tr>
                
                <td>@item.CheckInTime</td>
                <td>@item.CheckOutTime</td>
                <td>@item.TotalDuration</td>
               <td>@item.Employee.Name</td>
                

                <td><a href="GetEmployeeShiftById/@item.Id">View</a></td>
                <td><a href="RemoveEmployeeShiftById/@item.Id">Delete</a></td>

            </tr>
        }
    </tbody>
</table>

