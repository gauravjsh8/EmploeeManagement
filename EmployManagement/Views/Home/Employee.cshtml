@{
}
@model EmployManagement.Models.Employee
<form>action="AddEmployeeDetails"
    <div class="form">
        <label>EmployeeId</label>
        <input type="text" class="form-control" placeholder="Enter Your Name"
               asp-for="EmployeeId" />
    </div>
    <div class="form">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter Your Name"
               asp-for="Name" />

    </div>
    <div class="form">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Enter Your Address"
               asp-for="Address" />
    </div>
    <div class="form">
        <label>Phone Number</label>
        <input type="text" class="form-control" placeholder="Enter Your Phone Number"
               asp-for="PhoneNumber" />
    </div>
    <div class="form">
        <label>Salary</label>
        <input type="number" class="form-control" placeholder="Enter Your Name"
               asp-for="Salary" />
    </div>
    <div class="form">
        <label>Birth Date</label>
        <input type="date" class="form-control" placeholder="DBO"
               asp-for="Birthdate" />
    </div>
    <div class="form">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Enter Your Email" asp-for="Email" />
    </div>
    <button>
        Submit
    </button>

</form>