@{
}
@model EmployManagement.Models.Employee

<form asp-controller="Home" asp-action="UpdateEmployeeById">
    <div class="form">
        <label>Id</label>
        <input type="number" readonly class="form-control" placeholder="Enter Your Id No."
               asp-for="Id" />
    </div>

    <div class="form">
        <label>Employee Id</label>
        <input type="text" class="form-control" placeholder="Enter Your Employee Id No."
               asp-for="EmployeeId" />
    </div>
    <div class="form">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter Your Name"
               asp-for="Name" />

    </div>
    <div class="form">
        <label>Address</label>
        <input type="text" class="form-control" placeholder="Enter Your Address" 
        asp-for="Address"/>
    </div>
    <div class="form">
        <label>Phone Number</label>
        <input type="number" class="form-control" placeholder="Enter Your Phone Number"
               asp-for="PhoneNumber" />
    </div>
    <div class="form">
        <label>Salary</label>
        <input type="number" class="form-control" placeholder="Enter Your Salary"
               asp-for="Salary" />
    </div>
    <div class="form">
        <label>Birth Date</label>
        <input type="date" class="form-control" placeholder="DBO"
               asp-for="Birthdate" />
    </div>
    <div class="form">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Enter Your Email" asp-for="Email" />
    </div>
    
    <div class="form">
        <label>Department</label>
        <select class="form-control" asp-for="DepartmentId">
            <option></option>

            @foreach (var item in ViewBag.DepartmentList)
            {
                <option value="@item.Id">
                    @item.Name
                </option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>